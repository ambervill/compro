= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :lesson
    = f.text_field :lesson
  .field
    = f.label :level
    = f.number_field :level
  .field
    = f.label :xml
    = f.text_area :xml
  .actions
    = f.submit 'Save'
