= form_for @topic_result do |f|
  - if @topic_result.errors.any?
    #error_explanation
      %h2= "#{pluralize(@topic_result.errors.count, "error")} prohibited this topic_result from being saved:"
      %ul
        - @topic_result.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :topic
    = f.text_field :topic
  .field
    = f.label :student
    = f.text_field :student
  .field
    = f.label :grade
    = f.number_field :grade
  .actions
    = f.submit 'Save'
